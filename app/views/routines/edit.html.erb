<form action="/routines/<%=@routine.id%>" method="post"> 
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for="routine_description">Edit Description </label>
    <select id="routine_description" name="routine[style]">
    <%descriptions = ['power','strength','hypertrophy','endurance','aerobic']%>
    <%descriptions.insert(0, descriptions.delete(@routine.style))%>
    <%descriptions.each do |description|%>
        <option value="<%=description%>"><%=description.capitalize%></option>
    <%end%>
    </select><br>
    <label for="details">Edit Details</label><br>
    <textarea id="details" name="routine[routine_description]" rows='4' cols='50'><%=@routine.routine_description%></textarea><br>   
    <a class="signup edit" href="javascript:;" onclick="parentNode.submit();">Save Changes</a>
</form>

